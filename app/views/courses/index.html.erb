<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>html_id</th>
      <th>coursekey</th>
      <th>number of students</th>
      <th>number of teachers</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.id, course %></td>
        <td><%= link_to course.name, course %></td>
        <td><%= course.html_id %></td>
        <td><%= course.coursekey %></td>
        <td><%= course.students.count %></td>
        <td><%= course.teachers.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

